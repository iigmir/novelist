<h2><%= @novel.title %></h2>

<%#= @markdown.render( @novel.plot ) %>
<%= sanitize( @markdown.render( @novel.plot ) ) %>

<ol>
    <% @articles.each do |a| %>
    <li><%= link_to a.subtitle , novel_article_path({ novel_id: @novel.id , id: a.chapter }) %></li>
    <% end %>
</ol>

<% if user_signed_in? %>
    <%= link_to "編輯", edit_novel_path( @novel.id ) %>
    <%= link_to "刪除", novel_path( @novel.id ), data: {confirm: '確定嗎？'}, method: :delete %>
    <%= link_to "新的章節", new_novel_article_path( @novel.id ) %>
    <%= link_to "登出", destroy_user_session_path, method: :delete %>
<% else %>
    <%= link_to "登入", new_user_session_path %>
<% end %>