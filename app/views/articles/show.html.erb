<h2><%= link_to @novel.title , novel_path( params[:novel_id] ) %></h2>
<h3><%= @article.subtitle %></h3>

<%= sanitize( @markdown.render( @article.context ) ) %>

<%= content_for :footbar do %>
    <% if user_signed_in? %>
        <%= link_to "編輯", edit_novel_article_path({ novel_id: @novel.id , id: @article.chapter }) , class:"section" %>
        <div class="divider"> / </div>
        <%= link_to "刪除", novel_article_path({ novel_id: @novel.id , id: @article.chapter }), data: {confirm: '確定嗎？'}, method: :delete , class:"section" %>
        <div class="divider"> / </div>
        <%= link_to "登出", destroy_user_session_path, method: :delete , class:"section" %>
    <% else %>
        <%= link_to "登入", new_user_session_path , class:"section" %>    
    <% end %>
<% end %>